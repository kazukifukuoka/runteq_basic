  <div class="row">
    <div class="col-12">
      <div class="row">
      <% boards.each do |board| %>
        <div class="col-sm-12 col-lg-4 mb-3">
          <div id="board-id-#{board.id}">
            <div class="card">
              <%= image_tag '70017892-c40bbc00-15c7-11ea-8022-9cb7e5d22aa1.png', size: '300Ã—200' %>
              <div class="card-body">
                <h4 class="card-title">
                  <%= link_to board.title, '#' %>
                </h4>
                <div class='mr10 float-right'>
                  <%= link_to '#', id: 'button-edit-#{board.id}' do %>
                    <%= icon 'fa', 'pen' %>
                  <% end %>
                  <%= link_to '#', id: 'button-delete-#{board.id}', method: :delete, data: {confirm: ''} do %>
                    <%= icon 'fas', 'trash' %>
                  <% end %>
                </div>
                <ul class="list-inline">
                  <li class="list-inline-item"><%= icon 'far', 'user' %> <%= board.user.decorate.full_name %></li>
                  <li class="list-inline-item"><%= icon 'far', 'calendar' %>  <%= l board.created_at, format: :default %></li>
                </ul>
                <p class="card-text"><%= board.body %></p>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
