<% content_for(:new_board, '掲示板作成 | RUNTEQ BOARD APP') %>
<%= form_with model: @board, local: true do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 offset-lg-2">
        <h1><%= t('.title') %></h1>
        <%= render partial: 'shared/error_messages', locals: { obj: @board} %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: 'form-control', rows: 10 %>
        </div>
        <div class="form-group">
          <%= f.label :board_image, for: :board_img %>
          <%= f.file_field :board_image, id: :board_img, accept: "image/jpg,image/gif,image/jpeg,image/png" %>
        </div>
        <div class="form-group">
          <%= image_tag @board.board_image.url, id: :img_prev, size: '300x200' %>
        </div>
        <%= f.submit t('.submit'), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>

