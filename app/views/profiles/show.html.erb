<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('.title') %></h1>
      <%= link_to (t '.button'), edit_profile_path, class: 'btn btn-success float-right'%>
      <table class='table'>
        <tbody>
          <tr><th scope='row'><span class='translation_missing'><%= t('.email') %></span></th><td><%= current_user.email %></td></tr>
          <tr><th scope='row'><span class='translation_missing'><%= t('.full_name') %></span></th><td><%= current_user.decorate.full_name %></td></tr>
          <tr><th scope='row'><span class='translation_missing'><%= t('.avatar') %></span></th><td><%= image_tag current_user.avatar.url, size: '50x50', class: 'rounded-circle' %></td></tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

