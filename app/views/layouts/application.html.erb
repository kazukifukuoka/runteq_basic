<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :top %><%= yield :login %><%= yield :sign_up %><%= yield :new_board %><%= yield :index_board %><%= yield :show_board %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if logged_in? %>
      <%= render 'shared/header'%>
    <% else %>
      <%= render 'shared/before_login_header' %>
    <% end %>
    <%= render 'shared/flash_message'%>
    <%= yield %>
    <%= render 'shared/footer'%>
  </body>
</html>
